<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="company.demo15.Profile">
    <children>
        <!-- Profile Image -->
        <ImageView fx:id="profileImage" fitHeight="100.0" fitWidth="100.0" layoutX="250.0" layoutY="20.0" preserveRatio="true">
            <image>
                <Image url="@profile.jpeg" /> <!-- Replace with actual image path -->
            </image>
        </ImageView>

        <!-- Centered Heading -->
        <Label alignment="CENTER" layoutX="0.0" layoutY="140.0" prefWidth="600.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Faculty Admin Profile" />

        <!-- Profile Fields -->
        <Label layoutX="50.0" layoutY="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Name:" />
        <Label fx:id="nameLabel" layoutX="150.0" layoutY="200.0" style="-fx-font-size: 18px;" text="TSITSO" />

        <!-- Continue Button -->
        <Button fx:id="continueButton" layoutX="250.0" layoutY="300.0" onAction="#handleContinueButtonClick" style="-fx-font-size: 16px;" text="Continue" />
    </children>
</AnchorPane>
